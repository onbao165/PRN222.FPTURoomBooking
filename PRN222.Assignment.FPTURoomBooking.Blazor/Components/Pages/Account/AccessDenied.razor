@page "/Account/AccessDenied"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Access Denied</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h1 class="text-danger mb-4">Access Denied</h1>
                    <div class="mb-4">
                        <i class="oi oi-lock-locked" style="font-size: 4rem;"></i>
                    </div>
                    <p class="lead mb-4">You do not have permission to access this resource.</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" @onclick="GoHome">Return to Home</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoHome()
    {
        NavigationManager.NavigateTo("/");
    }
}