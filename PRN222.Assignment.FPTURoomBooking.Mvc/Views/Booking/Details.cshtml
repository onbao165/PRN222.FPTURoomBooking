@model BookingViewModel
@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PRN222.Assignment.FPTURoomBooking.Repositories.Models

@{
    ViewData["Title"] = "Booking Details";
    var isOwner = Model.AccountId.ToString() == User.FindFirstValue(ClaimTypes.NameIdentifier);
    var canModify = isOwner && Model.Status == BookingStatus.Pending;
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mt-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Booking" asp-action="Index">Bookings</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
    
    <h1 class="mt-2 mb-4">Booking Details</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between">
                    <span><i class="fas fa-info-circle me-1"></i> Booking Information</span>
                    <span>
                        @switch (Model.Status)
                        {
                            case BookingStatus.Pending:
                                <span class="badge bg-warning text-dark">Pending</span>
                                break;
                            case BookingStatus.Approved:
                                <span class="badge bg-success">Approved</span>
                                break;
                            case BookingStatus.Rejected:
                                <span class="badge bg-danger">Rejected</span>
                                break;
                            case BookingStatus.Cancelled:
                                <span class="badge bg-secondary">Cancelled</span>
                                break;
                            default:
                                <span class="badge bg-info">@Model.Status</span>
                                break;
                        }
                    </span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Booking ID:</div>
                        <div class="col-md-8">@Model.Id</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Booking Date:</div>
                        <div class="col-md-8">@Model.BookingDate.ToString("yyyy-MM-dd")</div>
                    </div>
                    @if (Model.Status != BookingStatus.Pending)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">
                                @(Model.Status == BookingStatus.Approved ? "Approved by:" : 
                                  Model.Status == BookingStatus.Rejected ? "Rejected by:" : "Handled by:")
                            </div>
                            <div class="col-md-8">@(Model.ManagerName ?? "N/A")</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Created:</div>
                        <div class="col-md-8">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
                    </div>
                    @if (Model.UpdatedAt != null)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Last Updated:</div>
                            <div class="col-md-8">@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm")</div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Rooms Booked:</div>
                        <div class="col-md-8">@Model.RoomSlots.Count</div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                        <div>
                            @if (canModify)
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                    <i class="fas fa-ban"></i> Cancel
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-clock me-1"></i> Room Slots
                </div>
                <div class="card-body">
                    @if (Model.RoomSlots.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Room</th>
                                        <th>Campus</th>
                                        <th>Time Slot</th>
                                        <th>Time Range</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slot in Model.RoomSlots)
                                    {
                                        <tr>
                                            <td>@slot.RoomName</td>
                                            <td>@slot.CampusName</td>
                                            <td>@slot.TimeSlot</td>
                                            <td>@slot.TimeSlotText</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            No room slots associated with this booking.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Cancel" asp-route-id="@Model.Id" method="post">
                <div class="modal-body">
                    <p>Are you sure you want to cancel this booking?</p>
                    <p class="text-warning"><i class="fas fa-exclamation-triangle"></i> This action cannot be undone.</p>
                    @Html.AntiForgeryToken()
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-warning">Cancel Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>
