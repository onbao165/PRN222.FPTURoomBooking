@model CreateBookingViewModel

@if (!Model.CampusId.HasValue || !Model.DepartmentId.HasValue || !Model.RoomId.HasValue)
{
    <div class="alert alert-info">
        Please select Campus, Department, and Room to view available slots.
    </div>
}
else if (Model.AvailableRoomSlots.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Room</th>
                <th>Time Slot</th>
                <th>Time Range</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.AvailableRoomSlots.Count; i++)
            {
                var slot = Model.AvailableRoomSlots[i];
                <tr>
                    <td>
                        <input type="checkbox" 
                               name="SelectedRoomSlots[@i].RoomId" 
                               value="@slot.RoomId" />
                        <input type="hidden" 
                               name="SelectedRoomSlots[@i].TimeSlot" 
                               value="@slot.TimeSlot" />
                    </td>
                    <td>@slot.RoomName</td>
                    <td>@slot.TimeSlot.ToString()</td>
                    <td>@slot.TimeSlotText</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No available room slots found for the selected criteria.</p>
}
<span asp-validation-for="SelectedRoomSlots" class="text-danger"></span>