@model EditBookingViewModel
@using PRN222.Assignment.FPTURoomBooking.Repositories.Models

@{
    ViewData["Title"] = "Edit Booking";
    var isPending = Model.Status == BookingStatus.Pending;
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mt-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Booking" asp-action="Index">Bookings</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Details</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>
    
    <h1 class="mt-2 mb-4">Edit Booking</h1>
    
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between">
                    <span><i class="fas fa-edit me-1"></i> Booking Details</span>
                    <span>
                        @switch (Model.Status)
                        {
                            case BookingStatus.Pending:
                                <span class="badge bg-warning text-dark">Pending</span>
                                break;
                            case BookingStatus.Approved:
                                <span class="badge bg-success">Approved</span>
                                break;
                            case BookingStatus.Rejected:
                                <span class="badge bg-danger">Rejected</span>
                                break;
                            case BookingStatus.Cancelled:
                                <span class="badge bg-secondary">Cancelled</span>
                                break;
                            default:
                                <span class="badge bg-info">@Model.Status</span>
                                break;
                        }
                    </span>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="AccountId" />
                        <input type="hidden" asp-for="AccountName" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="control-label">Booking ID</label>
                                    <input value="@Model.Id" class="form-control" readonly />
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label asp-for="BookingDate" class="control-label">Booking Date</label>
                                    <input asp-for="BookingDate" class="form-control" type="date" readonly="@(!isPending)" />
                                    <span asp-validation-for="BookingDate" class="text-danger"></span>
                                </div>
                                
                                @if (!isPending)
                                {
                                    <div class="form-group mb-3">
                                        <label asp-for="Status" class="control-label">Status</label>
                                        <select asp-for="Status" class="form-control">
                                            <option value="@Model.Status">@Model.Status</option>
                                            <option value="@BookingStatus.Cancelled">Cancelled</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                }
                                else
                                {
                                    <input type="hidden" asp-for="Status" />
                                }
                            </div>
                            
                            <div class="col-md-6">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-clock me-1"></i> Booked Room Slots
                                    </div>
                                    <div class="card-body">
                                        @if (Model.RoomSlots.Any())
                                        {
                                            <div class="table-responsive">
                                                <table class="table table-bordered table-hover">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>Room</th>
                                                            <th>Department</th>
                                                            <th>Campus</th>
                                                            <th>Time Slot</th>
                                                            <th>Time Range</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var slot in Model.RoomSlots)
                                                        {
                                                            <tr>
                                                                <td>@slot.RoomName</td>
                                                                <td>@slot.DepartmentName</td>
                                                                <td>@slot.CampusName</td>
                                                                <td>@slot.TimeSlot</td>
                                                                <td>@slot.TimeSlotText</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            
                                            <div class="alert alert-info mt-3">
                                                <i class="fas fa-info-circle"></i> 
                                                <small>
                                                    To modify the booked room slots, please cancel this booking and create a new one.
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="alert alert-warning">
                                                No room slots associated with this booking.
                                            </div>
                                        }
                                    </div>
                                </div>
                                
                                <div class="alert alert-primary">
                                    <i class="fas fa-info-circle"></i> 
                                    <strong>Note:</strong>
                                    <ul class="mb-0 ps-3">
                                        <li>You can only modify pending bookings</li>
                                        <li>You can cancel your booking at any time</li>
                                        <li>Notes can be updated for any booking</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mt-3">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Details
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
