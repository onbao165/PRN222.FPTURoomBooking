@model PRN222.Assignment.FPTURoomBooking.Mvc.Models.DepartmentViewModel
@using PRN222.Assignment.FPTURoomBooking.Services.Models.Room
@using PRN222.Assignment.FPTURoomBooking.Services.Utils
@{
    ViewData["Title"] = "Department Details";
    var rooms = ViewBag.Rooms as PaginationResult<RoomModel>;
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Department" asp-action="Index">Departments</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Department Details</h5>
                </div>
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Campus:</strong> @Model.CampusName</p>
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <a asp-controller="Campus" asp-action="Details" asp-route-id="@Model.CampusId" class="btn btn-info">View Campus</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Rooms in @Model.Name</h5>
                </div>
                <div class="card-body">
                    @if (rooms?.Items.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var room in rooms.Items)
                                    {
                                        <tr>
                                            <td>@room.Name</td>
                                            <td>@room.Description</td>
                                            <td>
                                                <a asp-controller="Room" asp-action="Details" asp-route-id="@room.Id" class="btn btn-sm btn-info">Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No rooms found in this department.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 