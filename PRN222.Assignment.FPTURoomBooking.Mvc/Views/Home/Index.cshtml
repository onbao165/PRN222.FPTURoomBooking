@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="text-center mt-5 mb-5">
        <h1 class="display-4">Welcome to FPTU Room Booking System</h1>
        <p class="lead">Easily book meeting rooms and study spaces across all FPT University campuses.</p>
    </div>

    <div class="row">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-plus fa-4x text-primary mb-3"></i>
                        <h3>Book a Room</h3>
                        <p>Browse available rooms and create a new booking request.</p>
                        <a asp-controller="Booking" asp-action="Create" class="btn btn-primary">Create Booking</a>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-list-alt fa-4x text-success mb-3"></i>
                        <h3>My Bookings</h3>
                        <p>View and manage your current and past room bookings.</p>
                        <a asp-controller="Profile" asp-action="Index" class="btn btn-success">View Profile</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-12 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-sign-in-alt fa-4x text-primary mb-3"></i>
                        <h3>Get Started</h3>
                        <p>Sign in to your account to book rooms and manage your bookings.</p>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x text-info mb-3"></i>
                    <h4>Multiple Campuses</h4>
                    <p>Book rooms across all FPT University locations throughout Vietnam.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-door-open fa-3x text-warning mb-3"></i>
                    <h4>Various Room Types</h4>
                    <p>Choose from lecture halls, meeting rooms, study spaces, and more.</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-3x text-danger mb-3"></i>
                    <h4>Flexible Time Slots</h4>
                    <p>Book rooms for specific time slots throughout the day.</p>
                </div>
            </div>
        </div>
    </div>
</div>